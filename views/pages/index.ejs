<!DOCTYPE html>
    <head>
        <%- include partials/styles %>
    </head>
    <body>
        <div class="bg-image"></div>
        <div class="container">
            <main>
                <%- include('partials/header', {user: user}); %>
                <div class="jumbotron-center">
                    <h1>League of Goons</h1>
                    <div class="pick-select">
                        <% if(teams) { %>
                            <form method="POST" action="/">
                                <select name="teamName" class="team-dropdown">
                                    <% for(var key in teams) { %>
                                        <option value="<%= teams[key].name %>">
                                            <%= teams[key].name %>
                                        </option>
                                    <% } %>
                                </select>
                                <input type="text" name="pickName" />
                                <button type="submit">Submit</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </body>
</html>