<div class="header">
    <div class="header-link">
        <a href="/">Home</a>
    </div>
    <div class="header-link">
        <a href="/pickems">Pick'ems</a>
    </div>
    <% if (!user) { %>
        <div class="header-link right">
            <div class="header-controls-login">
                <a href="/login">Login</a>
            </div> 
        </div>
    <% } else { %>
        <div class="header-link right">
            <div class="header-username">
                Hello, <%= user.name %>
            </div>
            <div class="header-controls-logout">
                <a href="/logout">Logout</a>
            </div>        
        </div>
    <% } %>
</div>